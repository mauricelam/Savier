<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:minWidth="300dp" android:padding="5dp">

    <com.mauricelam.Savier.GoalView
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:id="@+id/goalview"
            android:layout_alignParentLeft="true" android:layout_alignParentTop="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name"
            android:layout_toRightOf="@+id/goalview" android:layout_alignTop="@+id/goalview"
            android:layout_alignBottom="@+id/goalview" android:gravity="center_vertical|left" android:textSize="30sp"
            android:layout_alignParentRight="true"/>
    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/lorem"
            android:id="@+id/description"
            android:layout_alignParentLeft="true" android:layout_below="@+id/goalview"
            android:layout_alignRight="@+id/name" android:padding="5dp"/>
    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/description" android:gravity="right">

        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Delete"
                android:id="@+id/delete_button" android:layout_gravity="center"/>
        <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Close"
                android:id="@+id/close_button" android:layout_gravity="center"/>
    </LinearLayout>
</RelativeLayout>