<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"

                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical" >
    <ScrollView
            android:id="@+id/ScrollView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="254dp"
                android:paddingBottom="@dimen/activity_vertical_margin"
                android:paddingLeft="@dimen/activity_horizontal_margin"
                android:paddingRight="@dimen/activity_horizontal_margin"
                android:paddingTop="@dimen/activity_vertical_margin"
                tools:context=".SetupConfirmActivity" >

            <ProgressBar
                    android:id="@+id/progressBar4"
                    style="?android:attr/progressBarStyleHorizontal"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentTop="true"
                    android:layout_centerHorizontal="true"
                    android:layout_marginTop="20dp"
                    android:paddingTop="12dp"

                    />

            <TextView
                    android:id="@+id/confirm_header"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/progressBar4"
                    android:layout_alignParentLeft="true"
                    android:paddingLeft="5dp"
                    android:layout_marginBottom="16dp"

                    android:text="@string/setup_confirm"
                    android:textAppearance="?android:attr/textAppearanceLarge" />

            <TextView
                    android:id="@+id/confirm_name_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/confirm_header"
                    android:layout_below="@+id/confirm_header"
                    android:layout_marginTop="17dp"
                    android:text="@string/name_title"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
            <TextView
                    android:id="@+id/confirm_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/confirm_name_title"
                    android:layout_alignBottom="@+id/confirm_name_title"
                    android:layout_toRightOf="@+id/confirm_name_title"
                    android:textAppearance="?android:attr/textAppearanceMedium"/>
            <TextView
                    android:id="@+id/confirm_email_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignLeft="@+id/confirm_name_title"
                    android:layout_below="@+id/confirm_name_title"
                    android:layout_marginTop="15dp"
                    android:text="@string/email_title"
                    android:textAppearance="?android:attr/textAppearanceMedium" />
            <TextView
                    android:id="@+id/confirm_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBaseline="@+id/confirm_email_title"
                    android:layout_alignBottom="@+id/confirm_email_title"
                    android:layout_toRightOf="@+id/confirm_email_title"


                    android:textAppearance="?android:attr/textAppearanceMedium"/>
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_alignParentLeft="true"
                    android:layout_below="@+id/confirm_email" android:id="@+id/confirm_shipping_wrap"
                    android:background="@color/action_bar_gray" android:padding="10dp" android:layout_marginTop="10dp">
                <TextView
                        android:id="@+id/confirm_shipping_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"

                        android:text="@string/default_shipping_address"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                        android:fontFamily="sans-serif-light" android:textColor="@android:color/holo_blue_light"
                        android:textSize="20sp"/>

                <TextView
                        android:id="@+id/confirm_shipping_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/confirm_shipping_address"
                        android:layout_below="@+id/confirm_shipping_address"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"




                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/white" android:text="Address line 1"
                        android:background="#FF444444" android:padding="3dp"
                        android:layout_toLeftOf="@+id/imageView" android:layout_marginRight="20dp"/>
                <TextView
                        android:id="@+id/confirm_shipping_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/confirm_shipping_address"
                        android:layout_below="@+id/confirm_shipping_1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"




                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/white" android:text="Address line 2"
                        android:background="#FF444444" android:padding="3dp"
                        android:layout_toLeftOf="@+id/imageView" android:layout_marginRight="20dp"/>
                <TextView
                        android:id="@+id/confirm_shipping_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/confirm_shipping_address"
                        android:layout_below="@+id/confirm_shipping_2"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/white" android:text="Address line 3"
                        android:background="#FF444444" android:padding="3dp"
                        android:layout_toLeftOf="@+id/imageView" android:layout_marginRight="20dp"/>
                <TextView
                        android:id="@+id/confirm_shipping_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/confirm_shipping_address"
                        android:layout_below="@+id/confirm_shipping_3"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/white" android:text="Address line 4"
                        android:background="#FF444444" android:padding="3dp"
                        android:layout_toLeftOf="@+id/imageView" android:layout_marginRight="20dp"/>
                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:id="@+id/imageView"
                        android:src="@drawable/stamp" android:layout_alignParentRight="true"
                        android:layout_alignTop="@+id/confirm_shipping_address"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_alignParentLeft="true"
                    android:layout_below="@+id/confirm_shipping_wrap" android:id="@+id/confirm_billing_wrap"
                    android:background="@color/action_bar_gray" android:padding="10dp" android:layout_marginTop="10dp">
                <TextView
                        android:id="@+id/confirm_billing_address"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/default_billing_address"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:layout_alignParentTop="true" android:layout_alignParentLeft="true"
                        android:fontFamily="sans-serif-light" android:textColor="@android:color/holo_blue_light"
                        android:textSize="20sp"/>
                <TextView
                        android:id="@+id/confirm_billing_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/confirm_billing_address"
                        android:layout_below="@+id/confirm_billing_address"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"




                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/white" android:text="Billing address 1"
                        android:background="#FF444444" android:padding="3dp"
                        android:layout_toLeftOf="@+id/imageView1" android:layout_marginRight="30dp"/>
                <TextView
                        android:id="@+id/confirm_billing_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/confirm_billing_address"
                        android:layout_below="@+id/confirm_billing_1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:text="Billing address 2"



                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/white" android:background="#FF444444" android:padding="3dp"
                        android:layout_toLeftOf="@+id/imageView1" android:layout_marginRight="30dp"/>
                <TextView
                        android:id="@+id/confirm_billing_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/confirm_billing_address"
                        android:layout_below="@+id/confirm_billing_2"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"




                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/white" android:text="Billing address 3"
                        android:background="#FF444444" android:padding="3dp"
                        android:layout_toLeftOf="@+id/imageView1" android:layout_marginRight="30dp"/>
                <TextView
                        android:id="@+id/confirm_billing_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/confirm_billing_address"
                        android:layout_below="@+id/confirm_billing_3"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"




                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/white" android:text="Billing address 4"
                        android:background="#FF444444" android:padding="3dp"
                        android:layout_toLeftOf="@+id/imageView1" android:layout_marginRight="30dp"/>
                <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content"
                           android:id="@+id/imageView1" android:src="@drawable/stamp"
                           android:layout_alignParentRight="true"
                           android:layout_alignTop="@+id/confirm_billing_address"/>
            </RelativeLayout>
            <RelativeLayout
                    android:layout_width="fill_parent"
                    android:layout_height="fill_parent" android:layout_alignParentLeft="true"
                    android:layout_below="@+id/confirm_billing_wrap" android:id="@+id/confirm_card_wrap"
                    android:background="@color/action_bar_gray" android:padding="10dp" android:layout_marginTop="10dp">
                <TextView
                        android:id="@+id/confirm_card"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@+id/confirm_billing_address"
                        android:layout_below="@+id/confirm_billing_4"

                        android:text="@string/card_title"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:fontFamily="sans-serif-light" android:textColor="@android:color/holo_blue_light"
                        android:textSize="20sp" android:layout_marginBottom="20dp"/>


                <TextView
                        android:id="@+id/confirm_card_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/confirm_card"
                        android:layout_below="@+id/confirm_card"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"




                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/white" android:text="0000 0000 0000 0000"
                        android:background="#FF444444" android:autoText="true" android:padding="3dp"
                        android:minWidth="100dp"/>
                <TextView
                        android:id="@+id/confirm_card_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignLeft="@id/confirm_card"
                        android:layout_below="@+id/confirm_card_1"
                        android:layout_marginLeft="20dp"
                        android:layout_marginTop="8dp"
                        android:text="card name"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/white" android:layout_alignRight="@+id/confirm_card_1"
                        android:background="#FF444444" android:autoText="true" android:padding="3dp"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Expiration"
                        android:id="@+id/expiration_label"
                        android:fontFamily="sans-serif-light"
                        android:layout_toLeftOf="@+id/confirm_card_3"
                        android:layout_alignBaseline="@+id/confirm_card_3" android:layout_marginRight="10dp"/>
                <TextView
                        android:id="@+id/confirm_card_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/white" android:text="MM/YY"
                        android:layout_alignRight="@+id/confirm_card_1" android:layout_below="@+id/confirm_card_2"
                        android:layout_marginTop="10dp" android:background="#FF444444"
                        android:autoText="true" android:padding="3dp"/>
                <TextView
                        android:id="@+id/confirm_card_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="card cvv"
                        android:textAppearance="?android:attr/textAppearanceMedium"
                        android:textColor="@android:color/white"
                        android:layout_toRightOf="@+id/confirm_card_1" android:layout_alignTop="@+id/confirm_card_1"
                        android:layout_marginLeft="10dp" android:background="#FF444444"
                        android:autoText="true" android:padding="3dp"/>


            </RelativeLayout>
            <Button
                    android:id="@+id/submit_confirm_button"
                    android:layout_width="100dp"
                    android:layout_height="50dp"
                    android:gravity="center"
                    android:paddingBottom="10dp"
                    android:paddingTop="10dp"
                    android:text="@string/confirm"
                    android:layout_alignRight="@+id/progressBar4" android:layout_below="@+id/confirm_card_wrap"
                    android:layout_marginTop="10dp"/>

        </RelativeLayout>

    </ScrollView>


</RelativeLayout>
