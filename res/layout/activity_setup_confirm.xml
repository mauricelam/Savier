 <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
     
     xmlns:tools="http://schemas.android.com/tools"
android:layout_width="fill_parent"
android:layout_height="fill_parent"
android:orientation="vertical" >
 <ScrollView
     android:id="@+id/ScrollView"
     android:layout_width="match_parent"
     android:layout_height="match_parent"
     android:orientation="vertical">

 <RelativeLayout
     android:layout_width="match_parent"
     android:layout_height="254dp"
     android:paddingBottom="@dimen/activity_vertical_margin"
     android:paddingLeft="@dimen/activity_horizontal_margin"
     android:paddingRight="@dimen/activity_horizontal_margin"
     android:paddingTop="@dimen/activity_vertical_margin"
     tools:context=".SetupConfirmActivity" >
   
    <ProgressBar
        android:id="@+id/progressBar4"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:paddingTop="12dp"
        
         />

    <TextView
        android:id="@+id/confirm_header"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/progressBar4"
        android:layout_alignParentLeft="true"
		android:paddingLeft="5dp"
        android:layout_marginBottom="16dp"
        
        android:text="@string/setup_confirm"
        android:textAppearance="?android:attr/textAppearanceLarge" />
     
    <TextView
             android:id="@+id/confirm_name_title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/confirm_header"
        	android:layout_below="@+id/confirm_header"
        	android:layout_marginTop="17dp"
             android:text="@string/name_title" 
             android:textAppearance="?android:attr/textAppearanceMedium"/>
     <TextView
             android:id="@+id/confirm_name"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBaseline="@+id/confirm_name_title"
             android:layout_alignBottom="@+id/confirm_name_title"
             android:layout_toRightOf="@+id/confirm_name_title"
        	
              
             android:textAppearance="?android:attr/textAppearanceMedium"/>
    <TextView
             android:id="@+id/confirm_email_title"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/confirm_name_title"
        	android:layout_below="@+id/confirm_name_title"
        	android:layout_marginTop="15dp"
             android:text="@string/email_title"
             android:textAppearance="?android:attr/textAppearanceMedium" />
    <TextView
             android:id="@+id/confirm_email"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignBaseline="@+id/confirm_email_title"
             android:layout_alignBottom="@+id/confirm_email_title"
             android:layout_toRightOf="@+id/confirm_email_title"
        	
              
             android:textAppearance="?android:attr/textAppearanceMedium"/>
    <TextView
             android:id="@+id/confirm_shipping_address"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/confirm_email_title"
             android:layout_marginTop="20dp"
        	android:layout_below="@+id/confirm_email_title"
        	
             android:text="@string/default_shipping_address"
             android:textAppearance="?android:attr/textAppearanceMedium" />
    
<TextView
             android:id="@+id/confirm_shipping_1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@id/confirm_shipping_address"
             android:layout_below="@+id/confirm_shipping_address"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="8dp"
             
             
        	
              
             android:textAppearance="?android:attr/textAppearanceMedium"/>
<TextView
             android:id="@+id/confirm_shipping_2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@id/confirm_shipping_address"
             android:layout_below="@+id/confirm_shipping_1"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="8dp"
             
             
        	
              
             android:textAppearance="?android:attr/textAppearanceMedium"/>
<TextView
             android:id="@+id/confirm_shipping_3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@id/confirm_shipping_address"
             android:layout_below="@+id/confirm_shipping_2"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="8dp"
             
             
        	
              
             android:textAppearance="?android:attr/textAppearanceMedium"/>
<TextView
             android:id="@+id/confirm_shipping_4"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@id/confirm_shipping_address"
             android:layout_below="@+id/confirm_shipping_3"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="8dp"
             
             
        	
              
             android:textAppearance="?android:attr/textAppearanceMedium"/>
    
    <TextView
             android:id="@+id/confirm_billing_address"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/confirm_email_title"
        	android:layout_below="@+id/confirm_shipping_4"
        	android:layout_marginTop="20dp"
             android:text="@string/default_billing_address"
             android:textAppearance="?android:attr/textAppearanceMedium" />
<TextView
             android:id="@+id/confirm_billing_1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@id/confirm_billing_address"
             android:layout_below="@+id/confirm_billing_address"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="8dp"
             
             
        	
              
             android:textAppearance="?android:attr/textAppearanceMedium"/>
<TextView
             android:id="@+id/confirm_billing_2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@id/confirm_billing_address"
             android:layout_below="@+id/confirm_billing_1"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="8dp"
             android:text="billing2"
             
        	
              
             android:textAppearance="?android:attr/textAppearanceMedium"/>
<TextView
             android:id="@+id/confirm_billing_3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@id/confirm_billing_address"
             android:layout_below="@+id/confirm_billing_2"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="8dp"
             
             
        	
              
             android:textAppearance="?android:attr/textAppearanceMedium"/>
<TextView
             android:id="@+id/confirm_billing_4"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@id/confirm_billing_address"
             android:layout_below="@+id/confirm_billing_3"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="8dp"
             
             
        	
              
             android:textAppearance="?android:attr/textAppearanceMedium"/>
    
     <TextView
             android:id="@+id/confirm_card"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@+id/confirm_billing_address"
             android:layout_marginTop="20dp"
        	android:layout_below="@+id/confirm_billing_4"
        	
             android:text="@string/card_title"
             android:textAppearance="?android:attr/textAppearanceMedium" />
    
  
<TextView
             android:id="@+id/confirm_card_1"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@id/confirm_card"
             android:layout_below="@+id/confirm_card"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="8dp"
             
             
        	
              
             android:textAppearance="?android:attr/textAppearanceMedium"/>
<TextView
             android:id="@+id/confirm_card_2"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@id/confirm_card"
             android:layout_below="@+id/confirm_card_1"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="8dp"
             android:text="card name"
             
        	
              
             android:textAppearance="?android:attr/textAppearanceMedium"/>
<TextView
             android:id="@+id/confirm_card_3"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@id/confirm_card"
             android:layout_below="@+id/confirm_card_2"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="8dp"
             
             
        	
              
             android:textAppearance="?android:attr/textAppearanceMedium"/>
<TextView
             android:id="@+id/confirm_card_4"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content"
             android:layout_alignLeft="@id/confirm_card"
             android:layout_below="@+id/confirm_card_3"
             android:layout_marginLeft="20dp"
             android:layout_marginTop="8dp"
             android:text="card cvv"
             
        	
              
             android:textAppearance="?android:attr/textAppearanceMedium"/>
   

</RelativeLayout>

</ScrollView>
  
  <Button
        android:id="@+id/submit_confirm_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="12dp"
        android:gravity="center"
        android:paddingBottom="10dp"
        android:paddingTop="10dp"
        android:layout_marginBottom="10dp"
        android:text="@string/confirm"
         />

</RelativeLayout>
