<?xml version="1.0" encoding="utf-8"?>

<merge xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:id="@+id/money_label" android:layout_centerHorizontal="true" android:layout_alignParentTop="true"
            android:textSize="40sp"/>
    <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="+"
            android:id="@+id/plus_button"
            android:layout_alignParentRight="true"
            android:layout_below="@+id/money_label"
            android:background="@android:color/holo_blue_light"
            android:minWidth="20dp"
            android:minHeight="0dp"
            />
    <Button android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-"
            android:id="@+id/minus_button"
            android:layout_alignParentLeft="true"
            android:layout_below="@+id/money_label"
            android:background="@android:color/holo_blue_light"
            android:minWidth="20dp"
            android:minHeight="0dp"
            />
    <SeekBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/money_slider"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/money_label"
            android:indeterminate="false"
            android:layout_toRightOf="@+id/minus_button"
            android:layout_toLeftOf="@+id/plus_button"
            android:progress="40"
            android:max="80"
            />
</merge>